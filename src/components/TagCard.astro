---
interface Props {
  name: string
  count: {
    total: number
    articles: number
    resources: number
  }
}

const { name, count } = Astro.props
---

<a
  href={`/tags/${name.toLowerCase()}`}
  class='block p-6 bg-gray-800 rounded-lg border border-primary hover:border-[#83D6E7] transition-colors'
>
  <h2 class='text-2xl font-bold text-primary mb-2'>{name}</h2>
  <div class='text-gray-400 space-y-1'>
    <p class='font-medium'>
      {count.total} elemento{count.total !== 1 ? 's' : ''}
    </p>
    <div class='text-sm'>
      <p>{count.articles} art√≠culo{count.articles !== 1 ? 's' : ''}</p>
      <p>{count.resources} recurso{count.resources !== 1 ? 's' : ''}</p>
    </div>
  </div>
</a>
