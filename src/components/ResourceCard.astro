---
import { formatDate } from 'src/utils/dates'

interface Props {
  title: string
  description: string
  category: string
  href: string
  date: Date
}

const { title, description, category, href, date } = Astro.props
---

<article
  class='border border-gray-700 rounded-lg p-6 hover:shadow-lg transition-shadow bg-gray-800 relative min-h-[250px]'
>
  <h3 class='text-xl font-bold mb-2'>
    <a href={href} class='text-[#8b96fa] hover:text-[#daebf0]'>
      {title}
    </a>
  </h3>
  <p class='text-gray-300 text-xs mb-4'>{description}</p>
  <div class='flex items-center gap-2 text-sm'>
    <span
      class='bg-[#314aa9] text-violet-200 px-2 py-1 rounded absolute bottom-3'
    >
      {category}
    </span>
  </div>
  <div class='text-sm text-gray-400'>
    {formatDate(date.toISOString())}
  </div>
</article>
