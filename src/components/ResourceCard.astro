---
interface Props {
  title: string
  description: string
  category: string
  href: string
  date: string
}

const { title, description, category, href, date } = Astro.props
---

<article
  class='border border-gray-700 rounded-lg p-6 hover:shadow-lg transition-shadow bg-gray-800'
>
  <h3 class='text-xl font-bold mb-2'>
    <a href={href} class='text-violet-400 hover:text-violet-300'>
      {title}
    </a>
  </h3>
  <p class='text-gray-300 mb-4'>{description}</p>
  <div class='flex items-center gap-2 text-sm'>
    <span class='bg-violet-900 text-violet-200 px-2 py-1 rounded'>
      {category}
    </span>
  </div>
  <div class='text-sm text-gray-400'>
    {date}
  </div>
</article>
