---
import { formatDate } from 'src/utils/dates'

interface Props {
  title: string
  description: string
  category: string
  href: string
  date: Date
}

const { title, description, category, href, date } = Astro.props
---

<article
  class='flex flex-col justify-between border border-gray-700 rounded-lg p-6 hover:shadow-lg transition-shadow bg-gray-800 height-[auto]'
>
  <div class='mb-2'>
    <h3 class='text-lg font-bold mb-2'>
      <a href={href} class='text-[#368beb] hover:text-[#83d6e7]'>
        {title}
      </a>
    </h3>
    <p class='text-gray-300 text-sm mb-2'>{description}</p>
  </div>
  <div class='flex flex-col items-start gap-2 text-sm'>
    <p class='text-xs text-gray-400'>
      {formatDate(date.toISOString())}
    </p>
    <span class='bg-[#314aa9] text-violet-200 px-2 py-1 rounded'>
      {category}
    </span>
  </div>
</article>
